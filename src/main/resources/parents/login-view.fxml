<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Space-Based Bulletin Board">
            <VBox.margin>
                <Insets left="50.0" top="50.0"/>
            </VBox.margin>
            <font>
                <Font size="47.0"/>
            </font>
        </Text>
        <GridPane>
            <children>
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox.margin>
                <Insets left="50.0" top="50.0"/>
            </VBox.margin>
        </GridPane>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="loginButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false"
                        nodeOrientation="LEFT_TO_RIGHT" text="Login"/>
                <Button fx:id="registerButton" alignment="CENTER" mnemonicParsing="false" text="Register">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets left="50.0" top="50.0"/>
            </VBox.margin>
        </HBox>
        <Text strokeType="OUTSIDE" strokeWidth="0.0"
              text="Created by Jaspreet Dhanjan as a part of the Distributed and Client-Server Systems Course 2018/2019 University of Huddersfield"
              wrappingWidth="643.2060546875">
            <VBox.margin>
                <Insets left="20.0"/>
            </VBox.margin>
        </Text>
        <Text fx:id="errorText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
            <VBox.margin>
                <Insets left="20.0" top="20.0"/>
            </VBox.margin>
        </Text>
    </children>
</VBox>
